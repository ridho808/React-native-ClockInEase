{
  "extends": "@react-native/typescript-config/tsconfig.json",
   "compilerOptions": {
      "baseUrl": "." ,
       "paths": {
         "@components/*": [
          "src/components/*"
          ],
          "@assets/*": [
            "src/assets/*"
            ],
          "@screen/*": [
            "src/screen/*"
          ],
          "@api/*": [
            "src/api/*"
          ],
          "@utils/*": [
            "src/utils/*"
          ],
          "@type/*" : [
            "src/type/*"
          ],
          "@navigation/*" : [
            "src/navigation/*"
          ],
          "@context/*" : [
            "src/context/*"
          ]
       },
     }
}